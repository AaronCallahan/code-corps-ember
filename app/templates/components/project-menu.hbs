<li>{{#link-to 'project.index' project}}About{{/link-to}}</li>
<li>{{#link-to 'project.posts' project}}Posts{{/link-to}}</li>
{{#if session.isAuthenticated}}
  {{#if (can "manage organization" project.organization membership=credentials.currentUserMembership)}}
    <li class="contributors">
      {{#link-to 'project.settings.contributors' project}}Contributors {{#if project.hasPendingMembers}}<span class="info"><strong>{{project.pendingMembersCount}}</strong> pending</span>{{/if}}{{/link-to}}
    </li>
    <li>{{#link-to 'project.settings.profile' project}}Settings{{/link-to}}</li>
  {{/if}}
{{/if}}