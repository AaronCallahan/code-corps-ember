<div class="input-group">
  {{textarea name="markdown" placeholder="Add your comment here" value=comment.markdown}}
  {{#each comment.errors.markdown as |error|}}
    <p class="error">{{error.message}}</p>
  {{/each}}
</div>
<div class="input-group">
  <button name="save" {{action 'saveComment' comment}}>Post comment</button>
</div>