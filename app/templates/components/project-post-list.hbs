<button class="filter-ideas" {{action 'filterBy' 'idea'}}>Only show ideas</button>
<button class="filter-progress-posts" {{action 'filterBy' 'progress'}}>Only show progress posts</button>
<button class="filter-tasks" {{action 'filterBy' 'task'}}>Only show tasks</button>
<button class="filter-issues" {{action 'filterBy' 'issue'}}>Only show Issues</button>
{{#each filteredPosts as |post|}}
  <div class="post {{post.postType}}">
    {{post.title}}
  </div>
{{else}}
  <div class="no-posts">There are currently no posts of any type created for this project</div>
{{/each}}

<div class="pager">
  <button class="previous-page" {{action 'previousPage'}}>Previous</button>
  {{#each pages as |page|}}
    <button class="page {{page}}" {{action 'setPage' page}}>{{page}}</button>
  {{/each}}
  <button class="next-page" {{action 'nextPage'}}>Previous</button>
</div>