<button class="filter-ideas" {{action 'filterBy' 'idea'}}>Ideas</button>
<button class="filter-progress-posts" {{action 'filterBy' 'progress'}}>Progress</button>
<button class="filter-tasks" {{action 'filterBy' 'task'}}>Tasks</button>
<button class="filter-issues" {{action 'filterBy' 'issue'}}>Issues</button>
{{#link-to 'project.posts.new' class="new-post"}}New Post{{/link-to}}
{{#each filteredPosts as |post|}}
  {{post-item post=post}}
{{else}}
  <div class="no-posts">There are currently no posts of any type created for this project</div>
{{/each}}

{{pager-control options=options pageChanged='pageChanged'}}