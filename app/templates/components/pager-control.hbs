{{#unless onFirstPage}}
  {{link-to "Previous" 'project.posts.index' (query-params page=previousPage) class="previous-page button"}}
{{/unless}}
{{#each pages as |page|}}
  {{link-to page 'project.posts.index' (query-params page=page) classNameBindings="page :page :button"}}
{{/each}}
{{#unless onLastPage}}
  {{link-to "Next" 'project.posts.index' (query-params page=nextPage) class="next-page button"}}
{{/unless}}